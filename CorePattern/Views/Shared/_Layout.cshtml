<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CorePattern</title> 
    <link href="~/css/site-core.min.css" rel="stylesheet" />
    <script src="~/js/site-core.min.js"></script> 
</head>
<body>  
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" 
                data-target="#navbarSupportedContent" 
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
               
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" 
                       id="navbarDropdown" 
                       role="button" 
                       data-toggle="dropdown" 
                       aria-haspopup="true" 
                       aria-expanded="false">More
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a  asp-controller="Home" asp-action="About" class="dropdown-item">About</a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Home" asp-action="Contact" class="dropdown-item" >Contact</a> 
                    </div>
                </li> 
            </ul> 
        </div>
    </nav> 
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p></p>
        </footer>
    </div> 
    @RenderSection("Scripts", required: false)
</body>
</html>
